@{
    ViewData["Title"] = "Create Blog";
}

<form action="/Blog/Save" method="post">
    <h1>Create Blog Here!</h1>
    <div class="container p-5 w-50 border border-3 border-dark rounded-3">
        <div class="d-flex flex-row align-items-center mb-3">
            <label for="title" class="text-nowrap px-4">Blog Title: </label>
            <input type="text" id="title" class="form-control" name="BlogTitle" />
        </div>
        <div class="d-flex flex-row align-items-center mb-3">
            <label for="author" class="text-nowrap px-4">Blog Author: </label>
            <input type="text" id="author" class="form-control" name="BlogAuthor" />
        </div>
        <div class="d-flex flex-row align-items-start">
            <label for="content" class="text-nowrap px-4">Blog Content: </label>
            <textarea type="text" id="content" class="form-control" name="BlogContent"></textarea>
        </div>
        <button type="submit" class="btn btn-success" id="saveBtn" >Save</button>
    </div>
</form>